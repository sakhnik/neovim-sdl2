pkgname=neovim-sdl2
pkgver=0.0.1
pkgrel=1
pkgdesc='NeoVim GUI in C++ with SDL2'
arch=('x86_64' 'armv7h' 'aarch64')
url='https://github.com/sakhnik/neovim-sdl2'
licence=('MIT')
depends=('neovim>=0.4.4' 'ttf-dejavu' 'sdl2>=2.0.14' 'libuv>=1.36' 'msgpack-c>=3.3'
	'pango>=1.48' 'cairo>=1.17')
makedepends=('cmake' 'make')
source=("$pkgname-$pkgver.tar.gz::https://github.com/sakhnik/neovim-sdl2/archive/refs/tags/v$pkgver.tar.gz")
md5sums=('9654ac6af348a73870a2e0c4be3d3f66')

#prepare() {
#	cd "$pkgname-$pkgver"
#	patch -p1 -i "$srcdir/$pkgname-$pkgver.patch"
#}

build() {
	cd "$pkgname-$pkgver"
	cmake -B build -S "." -DCMAKE_INSTALL_PREFIX=/usr
	make -C build VERBOSE=1
}

check() {
	cd "$pkgname-$pkgver"
	make -C build test
}

package() {
	cd "$pkgname-$pkgver"
	make -C build DESTDIR="$pkgdir/" install VERBOSE=1
	install -Dm644 LICENSE "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}
